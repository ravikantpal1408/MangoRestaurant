@model IEnumerable<Mango.Web.Models.ProductDto>
@{
    ViewData["Title"] = "Product";
}


<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-info">Product Listings</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="Create" class="btn btn-outline-info"><i class="fas fa-plus"></i> Create New Product</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td>@item.Name</td>
                <td>@item.CategoryName.</td>
                <td>@item.Price</td>
                @*<td>@item.Description</td>*@
            </tr>
            }
        </tbody>
    </table>
</div>